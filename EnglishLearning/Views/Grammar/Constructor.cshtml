
@{
    ViewBag.Title = "Конструктор речень";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link rel="stylesheet" href="@Url.Content("~/Content/ExerciseStyle.css")">
}

<h2>Конструктор речень</h2>
<div class="d-flex flex-column flex-wrap justify-content-around align-items-center">
    <div id="sentence" data="@ViewBag.SentenceIndex" class="mb-2" style="word-break:break-word;">@*d-flex flex-column col-8*@
        <h4>@ViewBag.Translate</h4>
    </div>

    <div class="d-flex flex-row col-12 flex-wrap m-1" style="min-height:4vw" id="value" data="@Url.Action("ConstructorBlock", new { area=""})"></div> @*ondrop="drop(event, this)" ondragover="allowDrop(event)"*@ 
    <div class="d-flex flex-row col-12 flex-wrap m-1" style="min-height:4vw" id="question" data="@Url.Action("ConstructorBlock", new { area=""})">
        @Html.Action("ConstructorBlock", new { area="", sentenceIndex = ViewBag.SentenceIndex, wordIndex = 0})
    </div>
    <button class="btn btn-purple col-8 col-md-6 col-lg-4 questionBtn" type="button">Далі</button>
    <div class="alert alert-warning col-8 col-md-6 col-lg-4 text-center py-1 m-4" style="word-break: break-word;" id="answer" role="alert" hidden></div>

    @using (Html.BeginForm("Constructor", "Grammar", new { area = "", startIndex = 1 }, FormMethod.Post, new { @class = "mt-4 col-8 col-md-6 col-lg-4 px-0" }))
    {
        @:<input id="NextBtn" name="NextBtn" type="submit" class="btn btn-teal text-light col-12" value="Наступне" hidden>
    }

</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/ConstructorGrammarExercise.js">
    </script>
    @Scripts.Render("~/bundles/ajax")
}

