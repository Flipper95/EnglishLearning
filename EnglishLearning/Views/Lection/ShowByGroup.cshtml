@model List<EnglishLearning.Models.GroupModel>
@{
    ViewBag.Title = "ShowByGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link rel="stylesheet" href="@Url.Content("~/Content/TwoColTreeByGroup.css")">
}

<h2></h2>

@if (Model.Count() > 0)
{
    <a class="btn btn-secondary my-2" data-toggle="collapse" href="#Collapse_0" role="button" aria-expanded="false" aria-controls="#Collapse_0">Список по групам</a>
    <div class="collapse multi-collapse" id="Collapse_0">
        <ul class="listByGroup">
            @treeView.buildTree(Model, Model.FirstOrDefault().ParentId, ViewBag.Lections, ViewBag.User)
        </ul>
    </div>



    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link bg-secondary text-light active" id="beginner-tab" data-toggle="tab" href="#beginner" role="tab" aria-controls="beginner" aria-selected="true">Beginner</a>
        </li>
        <li class="nav-item">
            <a class="nav-link bg-secondary text-light" id="elementary-tab" data-toggle="tab" href="#elementary" role="tab" aria-controls="elementary" aria-selected="false">Elementary</a>
        </li>
        <li class="nav-item">
            <a class="nav-link bg-secondary text-light" id="intermediate-tab" data-toggle="tab" href="#intermediate" role="tab" aria-controls="intermediate" aria-selected="false">Intermediate</a>
        </li>
        <li class="nav-item">
            <a class="nav-link bg-secondary text-light" id="upper_intermediate-tab" data-toggle="tab" href="#upper_intermediate" role="tab" aria-controls="upper_intermediate" aria-selected="false">Upper-Intermediate</a>
        </li>
        <li class="nav-item">
            <a class="nav-link bg-secondary text-light" id="advanced-tab" data-toggle="tab" href="#advanced" role="tab" aria-controls="advanced" aria-selected="false">Advanced</a>
        </li>
        <li class="nav-item">
            <a class="nav-link bg-secondary text-light" id="proficient-tab" data-toggle="tab" href="#proficient" role="tab" aria-controls="proficient" aria-selected="false">Proficient</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="beginner" role="tabpanel" aria-labelledby="beginner-tab">
            <div class="card-columns">
                @Html.Action("ShowByComplexity", new { area = "", complexity = "Beginner" })
            </div>
        </div>
        <div class="tab-pane fade" id="elementary" role="tabpanel" aria-labelledby="elementary-tab">
            <div class="card-columns">
                @Html.Action("ShowByComplexity", new { area = "", complexity = "Elementary" })
            </div>
        </div>
        <div class="tab-pane fade" id="intermediate" role="tabpanel" aria-labelledby="intermediate-tab">
            <div class="card-columns">
                @Html.Action("ShowByComplexity", new { area = "", complexity = "Intermediate" })
            </div>
        </div>
        <div class="tab-pane fade" id="upper_intermediate" role="tabpanel" aria-labelledby="upper_intermediate-tab">
            <div class="card-columns">
                @Html.Action("ShowByComplexity", new { area = "", complexity = "Upper-Intermediate" })
            </div>
        </div>
        <div class="tab-pane fade" id="advanced" role="tabpanel" aria-labelledby="advanced-tab">
            <div class="card-columns">
                @Html.Action("ShowByComplexity", new { area = "", complexity = "Advanced" })
            </div>
        </div>
        <div class="tab-pane fade" id="proficient" role="tabpanel" aria-labelledby="proficient-tab">
            <div class="card-columns">
                @Html.Action("ShowByComplexity", new { area = "", complexity = "Proficient" })
            </div>
        </div>
    </div>

}

@section Scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/ToolTip.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/TreeColumnsSize.js")"></script>
}

